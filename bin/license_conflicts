#!/usr/bin/env ruby
# frozen_string_literal: true

require 'license_conflicts'

if ARGV.empty?
  puts 'Usage: license_conflicts <PROJECT_NAME>'
  exit 1
end

conflitant_dependencies = LicenseConflicts::Finder.new(ARGV.first).find_conflicts

if ARGV[1]
  format = ARGV[1]
  LicenseConflicts::Report.new(conflitant_dependencies, format).report
end
